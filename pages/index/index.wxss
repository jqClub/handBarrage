page {
  display: block;
  min-height: 100%;
  color: white;
  font: 30rpx;
  background-color: black;
}

.flex {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.content-backdrop {
  text-align: center;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.content-scroll {
  transform: rotate(90deg);
}

.content-item {
  transition-timing-function: linear;
  animation-fill-mode: forwards;
  backface-visibility: hidden;
  padding-bottom: 200rpx;
  transform: translate3d(0, 0, 0);
}

.bottom-text {
  height: 60rpx;
  font-size: 32rpx;
  flex-basis: 62%;
  border: 5rpx solid white;
  border-radius: 1.5em;
  padding: 0 35rpx;
  margin-left: 25rpx;
}

.back-img {
  position: fixed;
  z-index: 999;
}

.menu {
  position: fixed;
  width: 100%;
  z-index: 999;
  bottom: 0;
  left: 0;
  height: 200rpx;
  background: rgba(0, 0, 0, 0.6);
  animation-duration: 0.5s;
  animation-fill-mode: forwards;
}

.menu-ipx {
  padding-bottom: 34rpx;
}

.menu-item {
  margin: 0 auto;
  position: relative;
}

.menu-value {
  width: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  border-radius: 100%;
  border: 2rpx #fff solid;
  text-align: center;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  position: absolute;
  top: 0;
  right: 0;
}

.menu-title {
  text-align: center;
  width: 90rpx;
  height: 34rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
}

.menu-img {
  padding: 10rpx;
  width: 70rpx;
  height: 60rpx;
}

.send-btn {
  background-color: #fff;
  color: #333;
  width: 150rpx;
  line-height: 70rpx;
  border-radius: 100rpx;
  font-size: 34rpx;
  height: 70rpx;
  text-align: center;
}

@keyframes rise {
  0% {
    transform: translateY(200rpx);
  }

  100% {
    transform: translateY(0);
  }
}

@keyframes fall {
  0% {
    transform: translateY(0);
  }

  100% {
    transform: translateY(200rpx);
  }
}